!!! XML
!!! 1.1
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title= "Proactive Technology"
    = render :partial => 'shared/google_analytics' unless local_request?
    = "<!--[if IE 7]>#{stylesheet_link_tag 'ie7'}<![endif]-->" if request.env['HTTP_USER_AGENT'] =~ /MSIE/
    %link{:rel => "shortcut icon", :href => "/favicon.ico"} 
    = "<meta name=\"keywords\" content=\"#{@meta.meta_keywords}\" />" if @meta.meta_keywords.present?
    = "<meta name=\"description\" content=\"#{@meta.meta_description}\" />" if @meta.meta_description.present?
    = stylesheet_link_tag "style", "formatting"
    = javascript_include_tag "jquery.min.js", "jquery.scrollTo-min.js", "jquery.serialScroll-min.js"
    %link{:rel => "stylesheet", :type => "text/css", :href => "javascripts/shadowbox/shadowbox.css"}
    = javascript_include_tag "shadowbox/shadowbox.js", "jquery.bxcarousel.min.js", "jquery.jplayer.min.js", "application.js"
      
  %body
    #content
      #header
        = render :partial => "shared/menu"
      %object{:width => "900", :height => "226"}
        %param{:name => "proactive", :value => "/animation.swf"}
        %param{:id => "proactive"}
        %embed{:src => "/animation.swf", :width => "900", :height => "226"}
      #flash_footer
        #tagline
          Designing, producing and distributing eco-friendly, energy-efficient building products.
      = yield
      #jsPlayer
      #controls{:style => "text-align:right;"}
        = link_to_function image_tag("mute.jpg", :alt => "mute"), "stop_music();", :id => "pause_btn"
        = link_to_function image_tag("play.jpg", :alt => "play music"), "play_music();", :id => "play_btn"
      
      

  
