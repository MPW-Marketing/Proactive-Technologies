!!! XML
!!!
%html
  %head
    %title= "Proactive Technology"
    = render :partial => 'shared/google_analytics' unless local_request?
    = "<!--[if IE 7]>#{stylesheet_link_tag 'ie7'}<![endif]-->" if request.env['HTTP_USER_AGENT'] =~ /MSIE/
    %link{:rel => "shortcut icon", :href => "/favicon.ico"} 
    = "<meta name=\"keywords\" content=\"#{@meta.meta_keywords}\" />" if @meta.meta_keywords.present?
    = "<meta name=\"description\" content=\"#{@meta.meta_description}\" />" if @meta.meta_description.present?
    = stylesheet_link_tag "style", "formatting"
    = javascript_include_tag "jquery.min.js", "jquery.scrollTo-min.js", "jquery.serialScroll-min.js", "application.js"
    %link{:rel => "stylesheet", :type => "text/css", :href => "javascripts/shadowbox/shadowbox.css"}
    = javascript_include_tag "shadowbox/shadowbox.js", "jquery.bxcarousel.min.js"    
    :javascript
      Shadowbox.init();

  %body
    %center
      #content
        #header
          = render :partial => "shared/menu"
        %object{:width => "900", :height => "226"}
          %param{:name => "proactive", :value => "/flash-header.swf"}
          %embed{:src => "/flash-header.swf", :width => "900", :height => "226"}
        #flash_footer
          #tagline
            Designing, producing and distributing eco-friendly, energy-efficient building products.
        = yield

  
